{% extends 'base.html.twig' %}

{% block title %}Nos Ardoises - L'Ardoise Magique{% endblock %}

{% block extra_styles %}
    .ardoises-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 30px;
        margin-top: 30px;
    }

    .ardoise-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        transition: transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .ardoise-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.3);
    }

    .ardoise-card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 25px;
        color: white;
        text-align: center;
    }

    .ardoise-card-header h2 {
        font-size: 1.8rem;
        margin-bottom: 10px;
        font-weight: 400;
    }

    .ardoise-card-date {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .ardoise-card-body {
        padding: 25px;
    }

    .ardoise-card-prices {
        text-align: center;
    }

    .price-main {
        font-size: 2rem;
        color: #667eea;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .price-formules {
        font-size: 0.95rem;
        color: #666;
        margin-top: 10px;
    }

    .ardoise-card-sections {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }

    .section-preview {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 5px;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: rgba(255,255,255,0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        color: white;
    }

    .empty-state h2 {
        font-size: 2rem;
        margin-bottom: 20px;
    }
{% endblock %}

