{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}
    <h1 class="title">
        <i class="fa fa-home"></i> Bienvenue sur L'Ardoise Magique
    </h1>
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-8">
            {% if menus is defined and menus|length > 0 %}
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fa fa-link"></i> Mes Menus et Liens Publics
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">
                        <i class="fa fa-info-circle"></i>
                        Partagez ces liens sur vos reseaux sociaux, site web ou imprimez-les avec des QR codes !
                    </p>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Titre</th>
                                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                                        <th>Restaurant</th>
                                    {% endif %}
                                    <th>Statut</th>
                                    <th>Lien Public</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for menu in menus %}
                                <tr>
                                    <td>
                                        {% if menu.type == 'DAILY' %}
                                            <span class="badge bg-warning text-dark">
                                                <i class="fa fa-sun"></i> Jour
                                            </span>
                                        {% else %}
                                            <span class="badge bg-primary">
                                                <i class="fa fa-star"></i> Special
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <strong>{{ menu.titre }}</strong>
                                    </td>
                                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                                        <td>
                                            <small class="text-muted">{{ menu.owner.nomRestaurant }}</small>
                                        </td>
                                    {% endif %}
                                    <td>
                                        {% if menu.status %}
                                            <span class="badge bg-success">
                                                <i class="fa fa-check"></i> Publie
                                            </span>
                                        {% else %}
                                            <span class="badge bg-secondary">
                                                <i class="fa fa-eye-slash"></i> Brouillon
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% set publicUrl = url('app_public_menu', {
                                            'restaurant': menu.owner.slug,
                                            'slug': menu.slug
                                        }) %}
                                        <div class="input-group input-group-sm">
                                            <input
                                                type="text"
                                                class="form-control"
                                                value="{{ publicUrl }}"
                                                id="url-{{ menu.id }}"
                                                readonly
                                            >
                                            <button
                                                class="btn btn-outline-primary"
                                                type="button"
                                                onclick="copyToClipboard('url-{{ menu.id }}')"
                                                title="Copier le lien"
                                            >
                                                <i class="fa fa-copy"></i>
                                            </button>
                                            <a
                                                href="{{ publicUrl }}"
                                                class="btn btn-outline-success"
                                                target="_blank"
                                                title="Voir le menu"
                                            >
                                                <i class="fa fa-external-link-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {% endif %}

            <div class="card mb-4">
                <div class="card-header">
                    <i class="fa fa-info-circle"></i> Guide d'utilisation
                </div>
                <div class="card-body">
                    <h5>Gestion de vos Menus</h5>
                    <p>L'Ardoise Magique vous permet de gerer facilement deux types de menus :</p>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <i class="fa fa-sun fa-2x text-warning mb-2"></i>
                                    <h6>Menus du Jour</h6>
                                    <p class="small mb-0">Creez vos menus quotidiens avec entree, plat, dessert et formules tarifaires.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <i class="fa fa-star fa-2x text-primary mb-2"></i>
                                    <h6>Menus Speciaux</h6>
                                    <p class="small mb-0">Composez vos menus evenementiels avec une liste d'items personnalisables.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <h6><i class="fa fa-lightbulb"></i> Comment ca marche ?</h6>
                    <ol>
                        <li><strong>Creer un menu :</strong> Cliquez sur "Creer un Menu du Jour" ou "Creer un Menu Special"</li>
                        <li><strong>Remplir les informations :</strong> Titre, contenu, prix</li>
                        <li><strong>Publier :</strong> Cochez "Publie" pour rendre le menu visible</li>
                        <li><strong>Partager :</strong> Recuperez l'URL publique pour partager votre menu</li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fa fa-chart-bar"></i> Statistiques
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <strong>Total menus :</strong>
                        <span class="badge bg-primary">{{ totalMenus }}</span>
                    </p>
                    <p class="mb-2">
                        <strong>Menus publies :</strong>
                        <span class="badge bg-success">{{ menusPublies }}</span>
                    </p>
                    <p class="mb-0">
                        <strong>Menus non publies :</strong>
                        <span class="badge bg-secondary">{{ totalMenus - menusPublies }}</span>
                    </p>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="fa fa-user"></i> Mon Restaurant
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <strong>Nom :</strong><br>
                        {{ app.user.nomRestaurant }}
                    </p>
                    <p class="mb-0">
                        <strong>URL publique :</strong><br>
                        <small class="text-muted">/m/{{ app.user.slug }}/[menu-slug]</small>
                    </p>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <i class="fa fa-question-circle"></i> Aide rapide
                </div>
                <div class="card-body">
                    <p class="small mb-2"><strong>Status :</strong> Active/desactive la visibilite publique</p>
                    <p class="small mb-2"><strong>Slug :</strong> Identifiant unique dans l'URL</p>
                    <p class="small mb-0"><strong>Prix :</strong> Utilise le point comme separateur (ex: 12.50)</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function copyToClipboard(elementId) {
            const input = document.getElementById(elementId);
            input.select();
            input.setSelectionRange(0, 99999); // Pour mobile

            navigator.clipboard.writeText(input.value).then(function() {
                // Feedback visuel
                const button = input.nextElementSibling;
                const originalHtml = button.innerHTML;
                button.innerHTML = '<i class="fa fa-check"></i>';
                button.classList.remove('btn-outline-primary');
                button.classList.add('btn-success');

                setTimeout(function() {
                    button.innerHTML = originalHtml;
                    button.classList.remove('btn-success');
                    button.classList.add('btn-outline-primary');
                }, 2000);
            }).catch(function(err) {
                alert('Erreur lors de la copie : ' + err);
            });
        }
    </script>
{% endblock %}
