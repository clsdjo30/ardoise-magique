{% extends 'base.html.twig' %}

{% block title %}Éditer {{ ardoise.titre }} - L'Ardoise Magique{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-pencil"></i> Éditer l'ardoise
                </h1>
                {% if ardoise.isActive %}
                    <span class="badge bg-success fs-5">Ardoise Active</span>
                {% else %}
                    <span class="badge bg-secondary fs-5">Ardoise Inactive</span>
                {% endif %}
            </div>

            {{ include('admin/ardoise/_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
