{% extends 'base.html.twig' %}

{% block title %}L'Ardoise Magique - Gestion de menus pour restaurateurs{% endblock %}

{% block extra_styles %}
    .hero-section {
        padding: 100px 0;
        text-align: center;
        color: white;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 700;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        animation: fadeInDown 1s ease-out;
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 40px;
        opacity: 0.95;
        animation: fadeInUp 1s ease-out 0.3s backwards;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-buttons {
        animation: fadeInUp 1s ease-out 0.6s backwards;
    }

    .hero-buttons .btn {
        padding: 15px 40px;
        font-size: 1.2rem;
        border-radius: 50px;
        margin: 10px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    .features-section {
        padding: 80px 0;
        background: white;
    }

    .features-section h2 {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 60px;
        color: #333;
    }

    .feature-card {
        background: white;
        border-radius: 15px;
        padding: 40px;
        text-align: center;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        height: 100%;
        border: 2px solid transparent;
    }

    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.2);
        border-color: #667eea;
    }

    .feature-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .feature-card h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 15px;
        color: #333;
    }

    .feature-card p {
        color: #666;
        line-height: 1.6;
    }

    .benefits-section {
        padding: 80px 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .benefits-section h2 {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 60px;
    }

    .benefit-item {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
        padding: 20px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        backdrop-filter: blur(10px);
        transition: background 0.3s;
    }

    .benefit-item:hover {
        background: rgba(255, 255, 255, 0.2);
    }

    .benefit-icon {
        font-size: 3rem;
        margin-right: 25px;
        min-width: 60px;
    }

    .benefit-content h4 {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .benefit-content p {
        margin: 0;
        opacity: 0.9;
    }

    .cta-section {
        padding: 100px 0;
        background: white;
        text-align: center;
    }

    .cta-section h2 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 20px;
        color: #333;
    }

    .cta-section p {
        font-size: 1.3rem;
        color: #666;
        margin-bottom: 40px;
    }

    .cta-section .btn {
        padding: 18px 50px;
        font-size: 1.3rem;
        border-radius: 50px;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    @media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }
        .hero-subtitle {
            font-size: 1.2rem;
        }
        .hero-buttons .btn {
            font-size: 1rem;
            padding: 12px 30px;
        }
    }
{% endblock %}

