{# {% extends 'base.html.twig' %} #}

{# {% block title %}{{ ardoise.titre }} - {{ restaurant.nomRestaurant }}{% endblock %} #}

{% block body %}
<div class="menu-container daily-menu">
    <div class="menu-header">
        <h1 class="restaurant-name">{{ restaurant.nomRestaurant }}</h1>
        <h2 class="menu-title">{{ ardoise.titre }}</h2>
    </div>

    <div class="menu-content">
        {% if ardoise.dailyEntree %}
        <div class="menu-section">
            <h3 class="section-title">Entr�e</h3>
            <div class="section-content">
                {{ ardoise.dailyEntree|nl2br }}
            </div>
        </div>
        {% endif %}

        {% if ardoise.dailyPlat %}
        <div class="menu-section">
            <h3 class="section-title">Plat</h3>
            <div class="section-content">
                {{ ardoise.dailyPlat|nl2br }}
            </div>
        </div>
        {% endif %}

        {% if ardoise.dailyDessert %}
        <div class="menu-section">
            <h3 class="section-title">Dessert</h3>
            <div class="section-content">
                {{ ardoise.dailyDessert|nl2br }}
            </div>
        </div>
        {% endif %}

        {% if ardoise.priceEpd or ardoise.priceEp or ardoise.pricePd %}
        <div class="menu-pricing">
            <h3 class="pricing-title">Nos Formules</h3>
            {% if ardoise.priceEpd %}
            <div class="price-item">
                <span class="formula">Entr�e + Plat + Dessert</span>
                <span class="price">{{ ardoise.priceEpd }}�</span>
            </div>
            {% endif %}
            {% if ardoise.priceEp %}
            <div class="price-item">
                <span class="formula">Entr�e + Plat</span>
                <span class="price">{{ ardoise.priceEp }}�</span>
            </div>
            {% endif %}
            {% if ardoise.pricePd %}
            <div class="price-item">
                <span class="formula">Plat + Dessert</span>
                <span class="price">{{ ardoise.pricePd }}�</span>
            </div>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
        font-family: 'Georgia', serif;
        padding: 20px;
        min-height: 100vh;
    }

    .menu-container {
        max-width: 800px;
        margin: 0 auto;
        background: #2c2c2c;
        color: #f5f5f5;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        border: 8px solid #8B4513;
    }

    .menu-header {
        text-align: center;
        margin-bottom: 40px;
        padding-bottom: 30px;
        border-bottom: 3px double #f5f5f5;
    }

    .restaurant-name {
        font-size: 2.5em;
        color: #FFD700;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 3px;
    }

    .menu-title {
        font-size: 1.8em;
        color: #f5f5f5;
        font-style: italic;
    }

    .menu-section {
        margin-bottom: 35px;
    }

    .section-title {
        font-size: 1.8em;
        color: #FFD700;
        margin-bottom: 15px;
        text-transform: uppercase;
        border-bottom: 2px solid #FFD700;
        padding-bottom: 10px;
    }

    .section-content {
        font-size: 1.2em;
        line-height: 1.8;
        padding-left: 20px;
    }

    .menu-pricing {
        margin-top: 40px;
        padding-top: 30px;
        border-top: 3px double #f5f5f5;
    }

    .pricing-title {
        font-size: 1.8em;
        color: #FFD700;
        text-align: center;
        margin-bottom: 25px;
        text-transform: uppercase;
    }

    .price-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        margin-bottom: 10px;
        background: rgba(255,255,255,0.05);
        border-radius: 8px;
    }

    .formula {
        font-size: 1.3em;
    }

    .price {
        font-size: 1.5em;
        font-weight: bold;
        color: #FFD700;
    }

    @media (max-width: 768px) {
        .menu-container {
            padding: 20px;
        }
        .restaurant-name {
            font-size: 1.8em;
        }
        .menu-title {
            font-size: 1.3em;
        }
        .section-title {
            font-size: 1.4em;
        }
    }
</style>
{% endblock %}
