<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ ardoise.titre }} - {{ restaurant.nomRestaurant }}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Raleway:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
<div class="menu-container daily-menu">
    <div class="menu-header">
        <h1 class="restaurant-name">{{ restaurant.nomRestaurant }}</h1>
        <h2 class="menu-title">{{ ardoise.titre }}</h2>
    </div>

    <div class="menu-content">
        {% if ardoise.dailyEntree %}
        <div class="menu-section">
            <h3 class="section-title">Entrées</h3>
            <div class="section-content">
                {{ ardoise.dailyEntree|nl2br }}
            </div>
        </div>
        {% endif %}

        {% if ardoise.dailyPlat %}
        <div class="menu-section">
            <h3 class="section-title">Plats</h3>
            <div class="section-content">
                {{ ardoise.dailyPlat|nl2br }}
            </div>
        </div>
        {% endif %}

        {% if ardoise.dailyDessert %}
        <div class="menu-section">
            <h3 class="section-title">Desserts</h3>
            <div class="section-content">
                {{ ardoise.dailyDessert|nl2br }}
            </div>
        </div>
        {% endif %}

        {% if ardoise.priceEpd or ardoise.priceEp or ardoise.pricePd %}
        <div class="menu-pricing">
            <h3 class="pricing-title">Nos Formules</h3>
            {% if ardoise.priceEpd %}
            <div class="price-item">
                <span class="formula">Entrée + Plat + Dessert</span>
                <span class="dots"></span>
                <span class="price">{{ ardoise.priceEpd|number_format(2, ',', ' ') }} €</span>
            </div>
            {% endif %}
            {% if ardoise.priceEp %}
            <div class="price-item">
                <span class="formula">Entrée + Plat</span>
                <span class="dots"></span>
                <span class="price">{{ ardoise.priceEp|number_format(2, ',', ' ') }} €</span>
            </div>
            {% endif %}
            {% if ardoise.pricePd %}
            <div class="price-item">
                <span class="formula">Plat + Dessert</span>
                <span class="dots"></span>
                <span class="price">{{ ardoise.pricePd|number_format(2, ',', ' ') }} €</span>
            </div>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>

<style>
    :root {
        --font-title: 'Playfair Display', serif;
        --font-text: 'Raleway', sans-serif;
        --color-gold: #E0A800;
        --color-light: #FDFDFD;
        --color-dark-wood: #4a2c2a;
        --color-bg: #1a1a1a;
    }

    body {
        margin: 0;
        padding: 20px 0;
        font-family: var(--font-text);
        display: flex;
        align-items: center;
        justify-content: center;
        background: radial-gradient(ellipse at center, #2c2c2c 0%, #000000 100%);
    }

    .menu-container {
        max-width: 600px;
        width: 90%;
        margin: 20px auto;
        color: var(--color-light);
        padding: 40px 50px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.7);
        background-color: rgba(0, 0, 0, 0.6);
        border: 10px solid var(--color-dark-wood);
        border-radius: 5px;
        box-shadow: 0 0 25px rgba(0,0,0,0.6), inset 0 0 15px rgba(0,0,0,0.5);
    }

    .menu-header {
        text-align: center;
        margin-bottom: 40px;
        padding-bottom: 20px;
        border-bottom: 1px solid rgba(224, 168, 0, 0.4);
    }

    .restaurant-name {
        font-family: var(--font-title);
        font-size: 2.8em;
        color: var(--color-gold);
        margin: 0 0 10px;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
    }

    .menu-title {
        font-family: var(--font-text);
        font-weight: 500;
        font-size: 1.5em;
        color: var(--color-light);
        font-style: italic;
        margin: 0;
    }

    .menu-section {
        margin-bottom: 35px;
        text-align: center;
    }

    .section-title {
        font-family: var(--font-title);
        font-size: 1.6em;
        color: var(--color-gold);
        margin-bottom: 20px;
        text-transform: uppercase;
        position: relative;
    }

    .section-title::after {
        content: '';
        display: block;
        width: 70px;
        height: 2px;
        background: var(--color-gold);
        margin: 10px auto 0;
        opacity: 0.8;
    }

    .section-content {
        font-size: 1.3em;
        line-height: 1.7;
        color: var(--color-light);
    }

    .menu-pricing {
        margin-top: 40px;
        padding-top: 30px;
        border-top: 1px solid rgba(224, 168, 0, 0.4);
    }

    .pricing-title {
        font-family: var(--font-title);
        font-size: 2em;
        color: var(--color-gold);
        text-align: center;
        margin-bottom: 25px;
        text-transform: uppercase;
    }

    .price-item {
        display: flex;
        align-items: baseline;
        padding: 8px 0;
        font-size: 1.1em;
    }

    .formula {
        color: var(--color-light);
        font-weight: 500;
    }

    .dots {
        flex-grow: 1;
        border-bottom: 2px dotted rgba(255, 255, 255, 0.5);
        margin: 0 10px;
        transform: translateY(-3px);
    }

    .price {
        font-size: 1.2em;
        font-weight: bold;
        color: var(--color-gold);
    }

    @media (max-width: 600px) {
        body {
            padding: 0;
        }
        .menu-container {
            width: 100%;
            min-height: 100vh;
            padding: 30px 20px;
            border: none;
            border-radius: 0;
            margin: 0;
        }
        .restaurant-name {
            font-size: 2em;
        }
        .menu-title {
            font-size: 1.2em;
        }
        .section-title {
            font-size: 1.3em;
        }
        .section-content, .price-item {
            font-size: 1.1em;
        }
    }
</style>
</body>
</html>
